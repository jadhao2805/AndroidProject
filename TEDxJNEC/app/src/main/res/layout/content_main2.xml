                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"

                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Slider2" />

